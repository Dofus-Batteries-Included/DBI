<Project>
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <RestoreAdditionalProjectSources>
            https://api.nuget.org/v3/index.json;
            https://nuget.bepinex.dev/v3/index.json;
            https://nuget.samboy.dev/v3/index.json
        </RestoreAdditionalProjectSources>
    </PropertyGroup>
    
    <PropertyGroup>
        <DofusBuildId Condition="'$(DOFUSBUILDID)' == ''">80586dab8f524ef1b30871e0e49ece8a</DofusBuildId>
    </PropertyGroup>

    <Target Name="DisplayDofusBuildId" BeforeTargets="CoreCompile">
        <Message Importance="high" Text="Dofus build ID: $(DOFUSBUILDID)"/>
    </Target>
    
    <ItemGroup>
        <AssemblyAttribute Include="DofusBatteriesIncluded.Core.Metadata.ExpectedDofusBuildIdAttribute" Condition="'$(DOFUSBUILDID)' != ''">
            <_Parameter1>$(DOFUSBUILDID)</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>
</Project>